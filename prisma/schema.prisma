generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String     @id @default(uuid())
  name       String
  email      String?
  phone      String?
  address    String?
  createdAt  DateTime?
  updatedAt  DateTime?
  isDeleted  DateTime?
  gatePasses GatePass[]
}

model Item {
  id          String         @id @default(uuid())
  name        String
  description String?
  quantity    Int?
  unitPrice   Float?
  createdAt   DateTime?
  updatedAt   DateTime?
  isDeleted   DateTime?
  gatePasses  GatePassItem[]
}

model GatePass {
  id            String         @id @default(uuid())
  customerId    String
  status        Status         @default(pending)
  notes         String?
  location      String
  vehicleNo     String
  storeIncharge String
  createdAt     DateTime?
  updatedAt     DateTime?
  isDeleted     DateTime?
  issuedAt      DateTime?      @default(now())
  validUntil    DateTime?
  customer      Customer       @relation(fields: [customerId], references: [id])
  items         GatePassItem[]
}

model GatePassItem {
  id         String    @id @default(uuid())
  gatePassId String
  itemId     String
  quantity   Int
  serialNos  String[]
  createdAt  DateTime?
  updatedAt  DateTime?
  isDeleted  DateTime?
  gatePass   GatePass  @relation(fields: [gatePassId], references: [id])
  item       Item      @relation(fields: [itemId], references: [id])
}

model User {
  id              String           @id @default(uuid()) @db.VarChar(36)
  username        String           @unique @db.VarChar(256)
  password        String           @db.VarChar(256)
  createdAt       DateTime?
  updatedAt       DateTime?
  isDeleted       DateTime?
  employeeId      String?          @unique
  blacklistTokens BlacklistToken[]
  loggedInUsers   LoggedInUsers[]
  employee        Employee?        @relation(fields: [employeeId], references: [id])
  userGroups      UserGroup[]
  userRoles       UserRole[]
}

model Group {
  id          String      @id @default(uuid()) @db.VarChar(36)
  name        String      @unique @db.VarChar(256)
  readAccess  Json?
  writeAccess Json?
  createdAt   DateTime?
  updatedAt   DateTime?
  isDeleted   DateTime?
  groupRoles  GroupRole[]
  userGroups  UserGroup[]
}

model UserGroup {
  id        String    @id @default(uuid()) @db.VarChar(36)
  userId    String    @db.VarChar(36)
  groupId   String    @db.VarChar(36)
  active    Boolean
  createdAt DateTime?
  updatedAt DateTime?
  isDeleted DateTime?
  group     Group     @relation(fields: [groupId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, groupId])
}

model Role {
  id          String      @id @default(uuid()) @db.VarChar(36)
  name        String      @unique
  readAccess  Json?
  writeAccess Json?
  createdAt   DateTime?
  updatedAt   DateTime?
  isDeleted   DateTime?
  groupRoles  GroupRole[]
  userRoles   UserRole[]
}

model UserRole {
  id        String    @id @default(uuid()) @db.VarChar(36)
  userId    String    @db.VarChar(36)
  roleId    String    @db.VarChar(36)
  active    Boolean
  createdAt DateTime?
  updatedAt DateTime?
  isDeleted DateTime?
  role      Role      @relation(fields: [roleId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, roleId])
}

model GroupRole {
  id        String    @id @default(uuid()) @db.VarChar(36)
  groupId   String    @db.VarChar(36)
  roleId    String    @db.VarChar(36)
  active    Boolean
  createdAt DateTime?
  updatedAt DateTime?
  isDeleted DateTime?
  group     Group     @relation(fields: [groupId], references: [id])
  role      Role      @relation(fields: [roleId], references: [id])

  @@unique([groupId, roleId])
}

model AppFeature {
  name            String       @id @db.VarChar(256)
  parentFeatureId String?      @db.VarChar(256)
  label           String
  createdAt       DateTime?
  updatedAt       DateTime?
  isDeleted       DateTime?
  parentFeature   AppFeature?  @relation("ParentChild", fields: [parentFeatureId], references: [name])
  children        AppFeature[] @relation("ParentChild")
}

model FeaturePermission {
  id          String     @id @default(uuid()) @db.VarChar(36)
  parentType  ParentType
  parentId    String     @db.VarChar(36)
  permissions Json
  createdAt   DateTime?
  updatedAt   DateTime?
  isDeleted   DateTime?
}

model BlacklistToken {
  id         String    @id @default(uuid()) @db.VarChar(36)
  token      String    @unique
  rememberMe Boolean
  userId     String    @db.VarChar(36)
  createdAt  DateTime?
  user       User      @relation(fields: [userId], references: [id])
}

model LoggedInUsers {
  id         String    @id @default(uuid()) @db.VarChar(36)
  token      String    @unique
  userId     String    @db.VarChar(36)
  rememberMe Boolean
  createdAt  DateTime?
  user       User      @relation(fields: [userId], references: [id])
}

model Employee {
  id                 String              @id @default(uuid()) @db.VarChar(36)
  name               String
  surname            String
  address            String
  joiningDate        DateTime
  bloodGroup         String
  company            Company
  code               String              @unique
  createdAt          DateTime?
  updatedAt          DateTime?
  isDeleted          DateTime?
  image              String?
  contactNo          String
  department         String
  designation        String
  dob                DateTime
  filePaths          String[]            @default([])
  martialStatus      String
  noOfChildrens      Int?
  emergencyContactNo String?
  cnic               String              @default("")
  faceDescriptor     Json?
  notes              String?
  resignationDate    DateTime?
  status             EmployeeStatus      @default(ACTIVE)
  attendances        Attendance[]
  attendanceRequests AttendanceRequest[]
  leaveAllocation    LeaveAllocation[]
  leaveRequests      LeaveRequest[]
  shiftAssignments   ShiftAssignment[]
  todos              Todo[]
  user               User?
}

model Attendance {
  id         String           @id @default(uuid()) @db.VarChar(36)
  employeeId String
  date       DateTime
  status     AttendanceStatus
  checkIn    DateTime?
  checkOut   DateTime?
  location   String?
  createdAt  DateTime?
  updatedAt  DateTime?
  isDeleted  DateTime?
  comment    String?
  employee   Employee         @relation(fields: [employeeId], references: [id])
}

model LeaveRequest {
  id         String      @id @default(uuid()) @db.VarChar(36)
  employeeId String
  reason     String?
  startDate  DateTime
  endDate    DateTime
  status     LeaveStatus @default(PENDING)
  location   String?
  createdAt  DateTime?   @default(now())
  updatedAt  DateTime?   @updatedAt
  isDeleted  DateTime?
  image      String?
  employee   Employee    @relation(fields: [employeeId], references: [id])
}

model AttendanceRequest {
  id         String      @id @default(uuid()) @db.VarChar(36)
  employeeId String
  reason     String?
  status     LeaveStatus @default(PENDING)
  image      String?
  location   String?
  createdAt  DateTime?   @default(now())
  updatedAt  DateTime?   @updatedAt
  isDeleted  DateTime?
  employee   Employee    @relation(fields: [employeeId], references: [id])
}

model LeaveConfiguration {
  id          String            @id @default(uuid()) @db.VarChar(36)
  name        String            @unique
  description String?
  maxDays     Int
  createdAt   DateTime?         @default(now())
  updatedAt   DateTime?         @updatedAt
  isDeleted   DateTime?
  employees   LeaveAllocation[]
}

model LeaveAllocation {
  id                  String              @id @default(uuid()) @db.VarChar(36)
  employeeId          String
  leaveConfigId       String?
  assignedDays        Int
  note                String?
  createdAt           DateTime?           @default(now())
  updatedAt           DateTime?           @updatedAt
  isDeleted           DateTime?
  allocationEndDate   DateTime?
  allocationStartDate DateTime
  employee            Employee            @relation(fields: [employeeId], references: [id])
  leaveConfig         LeaveConfiguration? @relation(fields: [leaveConfigId], references: [id])
}

model AttendanceScheduler {
  id          String         @id @default(uuid()) @db.VarChar(36)
  parent      ScheduleParent
  runTime     DateTime
  status      ScheduleStatus
  log         String?
  createdAt   DateTime?
  isDeleted   DateTime?
  updatedAt   DateTime?
  employeeIds String[]
}

model Shift {
  id          String            @id @default(uuid()) @db.VarChar(36)
  name        String            @unique
  startTime   DateTime
  endTime     DateTime
  description String?
  createdAt   DateTime?         @default(now())
  updatedAt   DateTime?         @updatedAt
  isDeleted   DateTime?
  assignments ShiftAssignment[]
}

model ShiftAssignment {
  id         String    @id @default(uuid()) @db.VarChar(36)
  employeeId String
  shiftId    String
  startDate  DateTime
  endDate    DateTime?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  isDeleted  DateTime?
  employee   Employee  @relation(fields: [employeeId], references: [id])
  shift      Shift     @relation(fields: [shiftId], references: [id])

  @@unique([employeeId, shiftId, startDate])
}

model Todo {
  id          String       @id @default(uuid()) @db.VarChar(36)
  employeeId  String
  title       String
  description String?
  dueDate     DateTime?
  status      TodoStatus   @default(PENDING)
  priority    TodoPriority @default(MEDIUM)
  createdAt   DateTime?    @default(now())
  updatedAt   DateTime?    @updatedAt
  isDeleted   DateTime?
  employee    Employee     @relation(fields: [employeeId], references: [id])
}

model ActivityLog {
  id         String    @id @default(uuid()) @db.VarChar(36)
  userId     String?   @db.VarChar(36)
  action     String
  module     String?
  entityId   String?
  method     String?
  route      String?
  ip         String?
  request    Json?
  success    Boolean?
  statusCode Int?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  isDeleted  DateTime?

  @@index([createdAt])
  @@index([userId])
  @@index([module])
}

enum Status {
  pending
  approved
  cancelled
}

enum ParentType {
  Role
  User
  Group
}

enum EmployeeStatus {
  ACTIVE
  RESIGNED
  REJOINED
}

enum Company {
  SOLARMAX
  POWERHIGHWAY
  OKASHASMART
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  ON_LEAVE
  HALF_DAY
  HOLIDAYS
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ScheduleParent {
  LEAVE
  ABSENT
  CHECK_OUT
}

enum ScheduleStatus {
  SUCCESS
  FAIL
  SKIP
}

enum TodoStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TodoPriority {
  LOW
  MEDIUM
  HIGH
}
